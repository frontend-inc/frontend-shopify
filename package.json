{
    "name": "frontend-shopify",
    "version": "0.0.64",
    "license": "MIT",
    "description": "An Apollo GraphQL client for the Shopify Storefront API.",
    "homepage": "https://github.com/frontend-inc/frontend-shopify",
    "repository": {
        "type": "git",
        "url": "https://github.com/frontend-inc/frontend-shopify"
    },
    "keywords": [
        "react",
        "shopify",
        "apollo"        
    ],
    "main": "dist/index.js",
    "exports": {
      ".": "./dist/index.js",                
      "./client": "./dist/client/index.js",
      "./constants": "./dist/constants/index.js",
      "./context": "./dist/context/index.js",
      "./helpers": "./dist/helpers/index.js",
      "./hooks": "./dist/hooks/index.js", 
      "./graphql": "./dist/graphql/index.js" 
    },
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "/dist"
    ],
    "babel": {
        "presets": [
            "react",
            "env",
            "stage-2"
        ]
    },
    "scripts": {
        "build": "npx rimraf dist && npm run build:cjs",
        "build:cjs": "tsc --module commonjs --outDir dist",
        "bump": "./bump-version.sh",
        "deploy": "git add . && git commit -m 'deploy' && git push",
        "push": "yarn bump && yarn build && yarn deploy"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
      "cookies-next": "^2.1.1",
      "@apollo/client": "^3.8.9",
      "apollo-link-context": "^1.0.20",
      "apollo-link-http": "^1.5.17"  
    },
    "devDependencies": {
        "cookies-next": "^2.1.1",
        "react": "^17.0.1 || ^18.0.0",
        "react-dom": "^17.0.2 || ^18.0.0",
        "babel-cli": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "react-scripts": "^4.0.3",
        "typescript": "^4.4.4"
    },
    "peerDependencies": {
        "@apollo/client": "^3.8.9",
        "apollo-link-context": "^1.0.20",
        "apollo-link-http": "^1.5.17",
        "react": "^17.0.1 || ^18.0.0",
        "react-dom": "^17.0.2 || ^18.0.0"
    }
}